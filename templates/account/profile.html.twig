{% extends "base.html.twig" %}

{% block title %}Modification du compte utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-5">Modifier votre compte!</h1>
        <div class="row">
            <div class="col-md-12">
                {{form_start(form)}}
                    {{form_widget(form)}}
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Modifier le compte !</button>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}