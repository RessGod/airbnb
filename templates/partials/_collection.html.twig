{# 
    Pour afficher le formulaire d'ajout des images
 #}
{% block _ad_images_widget %}
    <p>Ici, vous pouvez ajouter vos propres images !</p>

    {{ form_widget(form) }}

    {# Pour récuperer le nombre de widget créer #}
    <input type="hidden" id="widgets-counter" value="">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary btn-lg">Ajouter une image</button>
    </div>
{% endblock %}

{# Pour soigner l'affichage des entry rows numeroté du formulaire #}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{# Pour soigner l'affichage des entry du formulaire #}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>

            {# Pour la suppression de la formulaire d'image #}
            <div class="col-md-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
            </div>

        </div>
        
    </div>
{% endblock %}