{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire numéro {{ comment.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n° {{ comment.id }}</h1>
        <div class="alert alert-info">
                <strong>Annonce liée:</strong> {{ comment.ad.title }} <br>
                <strong>Auteur:</strong> {{ comment.author.fullName }} <br>
                <strong>Annonce liée:</strong> {{ comment.createdAt | date('d/m/Y H:i') }} <br>
                <strong>Annonce liée:</strong> {{ comment.rating }} <br>
        </div>
         {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form)}}
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-check"></i>
                    Enregistrer les modifications
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}